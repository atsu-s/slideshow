<header class='top-page-header'>
<div><%= link_to "SLIDESHOW", root_path, class:  "top"%></div>
  <div class='nav'>
    <ul class='sign'>
      <% if user_signed_in? %>
        <div class = 'greeting'>
          <div class='hello'>HELLO!</div>
         <%= link_to current_user.nickname, "#", class:  "user-nickname"%>
        </div>
    </ul>
  </div>
        <div class="background-red" id="lists">menu<i class="fas fa-sort-down"></i></div>
        <ul class="show-lists hidden" id="pull-down">
          <li class="pull-down-list"><%= link_to 'CREATE',  new_slide_path, class: "create" %></li>
          <li class="pull-down-list">
            <% if @shares.present?%>
              <%= link_to 'SHARE', slide_shares_path(@shares.ids), method: :get, class: "go-share"%>
            <% end %>
          </li>
          <li class="pull-down-list"><%= link_to 'LOGOUT', destroy_user_session_path, method: :delete, class: "pull-down-logout" %></li>
        </ul>
      <% else %>
        <li><%= link_to 'LOGIN', new_user_session_path, class: "login" %></li>
      <% end %>
</header>
<body>
<div class='nil'></div>
  <% unless user_signed_in? %>
    <div>
      <div class= 'title'>
        <div class='main-title'>あなたもSLIDESHOWでSHOWを創りませんか？</div>
      </div>
    <div class= 'new'>
      <%= link_to '新規登録はこちら', new_user_registration_path, class: "sign-up"%>
    </div>
  <%else%>
    <% if current_user.slides.present? %>
    <div class='show-index'>
    <%= "#{current_user.nickname}'s Slide" %>
    </div>
    <ul class="slide-lists">
      <% current_user.slides.each do |slide| %>
        <li class='slide-list'>
        <div class='slide-title-content'>
          <div class='slide-title-head'>title:</div>
          <%= slide.title %>
        </div>
        <%= link_to slide_path(slide.id), method: :get do %>
          <div class='slide-img-content'>
            <%= image_tag slide.images[0], class: "slide-img" %>
          </div>
        <% end %>
        </li>
      <% end %>
    </ul>
    


    <% else %>
    <div class = 'introduction'>SLIDESHOWではこんなことができます</div>

    <div class='preview'>
      <div class='slider'>
        <div>
          <h2>SHOWを創ったり</h2>
          <%= image_tag 'home-image' ,class: "image", size:'600x600'%>
        </div>
        <div>
          <h2>SHOWを観返したり</h2>
          <%= image_tag 'sample' ,class: "image", size:'600x600'%>
        </div>
        <div>
          <h2>他の人のSHOWを観たり</h2>
          <%= image_tag 'sample2' ,class: "image", size:'600x600'%>
        </div>
        <div>
          <h3>コメントをすることもできます！</h3>
          <h3>SLIDESHOWはあなたを退屈させません</h3>
        </div>
        <ul class ='post'>
          <li class ='let'>Let's Create SHOW!</li>
          <li><%= link_to 'create',  new_slide_path, class: "create" %></li>
        </ul>
      </div>
    </div>
    <% end %>
  <%end%>
</body>