<%= form_with model: @slide, url: slides_path, local: true do |f| %>
<head>
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/6.5.8/swiper-bundle.min.css">
</head>
<header class='top-page-header'>
  <div><%= link_to "SLIDESHOW", root_path, class:  "top"%></div>
  <div class="reset-save">
      <div class="reset" id="reset_btn">Reset</div>
    <label>
      <div class="save">Save</div>
      <%= f.submit "Save", class: :form_btn%>
    </label>
  </div>
</header>

