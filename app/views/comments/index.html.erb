<header class="top-page-header">
  <div><%= link_to "SLIDESHOW", root_path, class:  "top"%></div>
</header>
<body>
  <div class="nil"></div>
  <%= "#{@slide.title}'s' Comment Room"%>
  <ul class="comments_lists">
    <% @comments.each do |comment| %>
      <li class="comments_list">
        <%= comment.user.nickname %>
        <%= comment.comment_text%>
      </li>
    <% end %>
  </ul>
  <div class="create-comment">
    <%= link_to "Create Comment", new_slide_comment_path, class: "comment-btn"%>

  <%# 戻るボタン %>
  <div class="roll-back">
    <%= link_to slide_shares_path, class: "roll-back-btn" do%>
      <div class="back">BACK
        <i class="fas fa-undo-alt"></i>
      </div>
    <% end %>
  </div>
</body>